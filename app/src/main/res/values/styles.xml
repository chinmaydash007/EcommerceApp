<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cerapro_bold</item>
    </style>

    <style name="Custom_TextView_Style_Email" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <style name="Custom_TextView_Style_Password" parent="Custom_TextView_Style_Email">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconContentDescription">Hide</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconTint">@color/purple</item>
        <item name="endIconTintMode">multiply</item>
        <item name="hintTextAppearance">?attr/textAppearanceCaption</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">18</item>
        <item name="counterTextColor">@color/light_purple_one</item>
        <item name="counterOverflowTextColor">@color/yellow</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

</resources>
